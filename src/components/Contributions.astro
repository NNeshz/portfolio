---
import { getCachedData } from "../lib/github-cache";
import { Temporal } from "temporal-polyfill";

const GITHUB_USERNAME = "nneshz";
const GITHUB_TOKEN = import.meta.env.GITHUB_TOKEN;

interface ContributionDay {
  date: string;
  count: number;
  level: number;
}

interface ContributionData {
  total: number;
  weeks: ContributionDay[][];
}

async function fetchGitHubContributions(): Promise<ContributionData | null> {
  try {
    const headers: HeadersInit = {
      "Content-Type": "application/json",
    };

    if (GITHUB_TOKEN) {
      headers["Authorization"] = `Bearer ${GITHUB_TOKEN}`;
    }

    const query = `
      query($username: String!) {
        user(login: $username) {
          contributionsCollection {
            contributionCalendar {
              totalContributions
              weeks {
                contributionDays {
                  contributionCount
                  date
                  contributionLevel
                }
              }
            }
          }
        }
      }
    `;

    const response = await fetch("https://api.github.com/graphql", {
      method: "POST",
      headers,
      body: JSON.stringify({
        query,
        variables: { username: GITHUB_USERNAME },
      }),
    });

    if (!response.ok) {
      throw new Error(`GitHub API error: ${response.status}`);
    }

    const data = await response.json();
    const calendar =
      data.data.user.contributionsCollection.contributionCalendar;

    return {
      total: calendar.totalContributions,
      weeks: calendar.weeks.map((week: any) =>
        week.contributionDays.map((day: any) => ({
          date: day.date,
          count: day.contributionCount,
          level:
            day.contributionLevel === "NONE"
              ? 0
              : day.contributionLevel === "FIRST_QUARTILE"
                ? 1
                : day.contributionLevel === "SECOND_QUARTILE"
                  ? 2
                  : day.contributionLevel === "THIRD_QUARTILE"
                    ? 3
                    : 4,
        })),
      ),
    };
  } catch (error) {
    console.error("Error fetching GitHub contributions:", error);
    return null;
  }
}

const contributions = await getCachedData(fetchGitHubContributions);

const allDays = contributions?.weeks.flatMap((week) => week) || [];
const weekCount = contributions?.weeks.length || 53;
---

{
  contributions && (
    <div class="w-full">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-4">
        <h3 class="text-sm font-medium">Contribuciones en GitHub</h3>
        <span class="text-xs sm:text-sm text-muted-foreground">
          {contributions.total.toLocaleString("es-MX")} en el último año
        </span>
      </div>

      <div class="w-full relative @[container-type:inline-size]">
        <div
          class="grid grid-rows-7 grid-cols-[repeat(var(--week-count),1fr)] grid-flow-col w-full gap-[2px] sm:gap-[3px]"
          style={{ "--week-count": weekCount }}
        >
          {allDays.map((day) => (
            <div
              class="w-full aspect-square bg-muted transition-all duration-200 ease-in-out cursor-pointer hover:scale-110
              data-[level=0]:bg-border/50
              data-[level=1]:bg-[hsl(142,76%,75%)]
              data-[level=2]:bg-[hsl(142,76%,55%)]
              data-[level=3]:bg-[hsl(142,76%,35%)]
              data-[level=4]:bg-[hsl(142,76%,22%)]
              dark:data-[level=0]:bg-muted-foreground/15
              dark:data-[level=1]:bg-[hsl(142,65%,45%)]
              dark:data-[level=2]:bg-[hsl(142,65%,38%)]
              dark:data-[level=3]:bg-[hsl(142,65%,28%)]
              dark:data-[level=4]:bg-[hsl(142,65%,20%)]"
              data-level={day.level}
              data-count={day.count}
              data-date={day.date}
              title={`${day.count} contribuciones el ${Temporal.PlainDate.from(day.date).toLocaleString("es-MX", { dateStyle: "full" })}`}
            />
          ))}
        </div>
      </div>

      <div class="flex items-center gap-2 mt-4 text-xs text-muted-foreground justify-end">
        <span>Menos</span>
        <div class="flex gap-1">
          <div
            class="size-3 aspect-square cursor-default bg-border/50 dark:bg-muted-foreground/15"
            data-level="0"
          />
          <div
            class="size-3 aspect-square cursor-default bg-[hsl(142,76%,75%)] dark:bg-[hsl(142,65%,45%)]"
            data-level="1"
          />
          <div
            class="size-3 aspect-square cursor-default bg-[hsl(142,76%,55%)] dark:bg-[hsl(142,65%,38%)]"
            data-level="2"
          />
          <div
            class="size-3 aspect-square cursor-default bg-[hsl(142,76%,35%)] dark:bg-[hsl(142,65%,28%)]"
            data-level="3"
          />
          <div
            class="size-3 aspect-square cursor-default bg-[hsl(142,76%,22%)] dark:bg-[hsl(142,65%,20%)]"
            data-level="4"
          />
        </div>
        <span>Más</span>
      </div>
    </div>
  )
}
