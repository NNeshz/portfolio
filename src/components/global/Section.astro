---
const { sectionLabel, id } = Astro.props;
---

<section
  class="relative w-full flex flex-col gap-10 items-center justify-center px-4 py-20 sm:py-24 bg-background perfect-shadow"
>
  <h2
    class="absolute top-[-20px] h-10 flex items-center px-4 py-1 rounded-full bg-background z-20 border border-border text-foreground text-sm sm:text-normal md:text-lg tracking-tighter shadow-md"
    id={id}
  >
    {sectionLabel}
  </h2>
  <slot />
  <div
    class="z-10 absolute w-[100%] h-full border-dashed border-t border-b border-border x-gradient"
  >
  </div>
  <div
    class="z-10 absolute w-full h-[100%] border-dashed border-l border-r border-border y-gradient"
  >
  </div>
</section>

<style>
  .x-gradient {
    mask: linear-gradient(
      90deg,
      transparent,
      white 20%,
      white 80%,
      transparent
    );
    webkitmask: linear-gradient(
      90deg,
      transparent,
      white 20%,
      white 80%,
      transparent
    );
  }
  .y-gradient {
    mask: linear-gradient(
      180deg,
      transparent,
      white 20%,
      white 80%,
      transparent
    );
    webkitmask: linear-gradient(
      180deg,
      transparent,
      white 20%,
      white 80%,
      transparent
    );
  }
</style>