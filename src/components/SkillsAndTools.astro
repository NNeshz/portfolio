---
import { Image } from "astro:assets";

// Icons
import AstroLight from "../assets/icons/Astro_light.svg";
import AstroDark from "../assets/icons/Astro_dark.svg";
import Docker from "../assets/icons/docker.svg";
import GithubLight from "../assets/icons/GitHub_light.svg";
import GithubDark from "../assets/icons/GitHub_dark.svg";
import GoLight from "../assets/icons/Go_light.svg";
import GoDark from "../assets/icons/Go_dark.svg";
import GoogleCloud from "../assets/icons/google-cloud.svg";
import Javascript from "../assets/icons/javascript.svg";
import MongoDBLight from "../assets/icons/MongoDB_light.svg";
import MongoDBDark from "../assets/icons/MongoDB_dark.svg";
import Nestjs from "../assets/icons/nestjs.svg";
import Nextjs from "../assets/icons/nextjs.svg";
import Nodejs from "../assets/icons/nodejs.svg";
import Postgresql from "../assets/icons/postgresql.svg";
import ReactIcon from "../assets/icons/react.svg";
import Typescript from "../assets/icons/typescript.svg";

const skills = [
  { name: "JavaScript", icon: Javascript },
  { name: "TypeScript", icon: Typescript },
  { name: "React", icon: ReactIcon },
  { name: "Next.js", icon: Nextjs },
  { name: "Astro", iconLight: AstroDark, iconDark: AstroLight },
  { name: "Node.js", icon: Nodejs },
  { name: "Go", iconLight: GoLight, iconDark: GoDark },
  { name: "NestJS", icon: Nestjs },
  { name: "PostgreSQL", icon: Postgresql },
  { name: "MongoDB", iconLight: MongoDBLight, iconDark: MongoDBDark },
  { name: "Docker", icon: Docker },
  { name: "Google Cloud", icon: GoogleCloud },
  { name: "GitHub", iconLight: GithubLight, iconDark: GithubDark },
];
---

<section class="border-b">
  <div class="max-w-4xl mx-auto px-4 py-12 border-l border-r space-y-8">
    <h2
      class="text-muted-foreground"
    >
      Habilidades y Herramientas
    </h2>
    <div class="flex flex-wrap gap-3">
      {
        skills.map((skill) => (
          <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg border border-border bg-card/50 hover:bg-card text-card-foreground shadow-sm hover:shadow-md transition-all duration-300">
            {skill.icon ? (
              <Image src={skill.icon} alt={skill.name} class="h-4 w-auto object-contain" />
            ) : (
              <>
                <Image
                  src={skill.iconLight}
                  alt={skill.name}
                  class="h-4 w-auto object-contain block dark:hidden"
                />
                <Image
                  src={skill.iconDark}
                  alt={skill.name}
                  class="h-4 w-auto object-contain hidden dark:block"
                />
              </>
            )}
            <span class="text-sm font-medium leading-none">{skill.name}</span>
          </div>
        ))
      }
    </div>
  </div>
</section>
