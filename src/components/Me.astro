---
import { Image } from "astro:assets";
import nneshz from "../assets/img/nneshz.png";
import ThemeSwitcher from "./ThemeSwitcher.astro";
---

<section>
  <div
    class="max-w-4xl mx-auto p-4 sm:p-6 border-l border-r border-b flex flex-col sm:flex-row items-center gap-4 sm:gap-6 relative"
  >
    <Image
      src={nneshz}
      alt="NNeshz Profile Picture"
      width={100}
      height={100}
      quality={100}
      format="png"
      decoding="async"
      loading="eager"
      class="shrink-0 image-render-crisp"
      densities={[1, 2, 3]}
    />
    <div class="text-center sm:text-left">
      <h1 class="text-2xl sm:text-3xl font-bold">Neftali Hern√°ndez</h1>
      <h2 class="text-lg sm:text-xl text-muted-foreground">Full Stack Developer</h2>
    </div>
    <div class="absolute top-2 right-2 sm:top-4 sm:right-4">
      <ThemeSwitcher />
    </div>
  </div>
</section>

<style>
  .image-render-crisp {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
    image-rendering: pixelated;
  }
</style>